{
    "type": "library",
    "name": "nabu-3/minimal-class",
    "description": "nabu-3 Minimal base class for all nabu-3 packages",
    "keywords": [ "nabu-3", "nabu", "class", "library", "minimal" ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/nabu-3/minimal-class"
        }
    ],
    "version": "3.0.4",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Rafael Gutierrez",
            "email": "rgutierrez@nabu-3.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/nabu-3/minimal-class/issues",
        "email": "contact@nabu-3.com",
        "source": "https://github.com/nabu-3/minimal-class"
    },
    "require": {
        "php": ">=7.2",
        "ext-mbstring": ">=7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "classmap": [
            "src/"
        ],
        "files": [
            "src/globals.php",
            "src/functions.php",
            "src/strings.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    }
}
